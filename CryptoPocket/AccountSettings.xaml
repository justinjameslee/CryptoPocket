<UserControl x:Class="CryptoPocket.AccountSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:CryptoPocket"
        Height="550" Width="945"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <materialDesign:Card Width="400" Height="155" Margin="10,10,10,10" HorizontalAlignment="Left" Padding="15">
            <Grid>
                <StackPanel>
                    <TextBlock FontSize="18">Guest</TextBlock>
                    <Separator/>
                    <TextBlock Margin="0,3,0,0">Membership: Premium</TextBlock>
                    <TextBlock Margin="0,3,0,0">Email: rdpolarity@gmail.com</TextBlock>
                    <TextBlock Margin="0,3,0,0">Connected Accounts: 4</TextBlock>
                    <TextBlock Margin="0,6,0,0" FontSize="16">Account Balance: -$5,000</TextBlock>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <materialDesign:Card Width="530" Height="530" Margin="10,10,10,10" HorizontalAlignment="Right" Padding="15">
            <Grid Margin="0,0,0,0" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" Margin="0,0,230,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Grid Width="250">
                        <GroupBox
                    		Style="{DynamicResource MaterialDesignGroupBox}"
                    		Margin="16"
                    		materialDesign:ColorZoneAssist.Mode="Accent" Width="215" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top">
                            <GroupBox.Header>
                                <TextBlock HorizontalAlignment="Center" FontSize="18"><Run Text="Program"/></TextBlock>
                            </GroupBox.Header>
                            <Grid>
                                <StackPanel VerticalAlignment="Top" Margin="0,0,0,0">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="16">Theme</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,30,20,0" HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="WeatherSunny" Margin="0,0,10,0" Width="25" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <ToggleButton Margin="0,0,0,0" Command="{Binding ToggleBaseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=IsChecked}" Click="ThemeChecked"/>
                                    <materialDesign:PackIcon Kind="WeatherNight" Margin="10,0,0,2" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </StackPanel>
                                <StackPanel VerticalAlignment="Top" Margin="0,80,0,0">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="16">Boot on Startup</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,120,20,20" HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Close" Margin="0,0,10,0" Width="25" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <ToggleButton Margin="0,0,0,0" Command="{Binding ToggleBaseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=IsChecked}" />
                                    <materialDesign:PackIcon Kind="Check" Margin="10,0,0,2" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="235,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Grid Width="247">
                        <GroupBox
                    		Style="{DynamicResource MaterialDesignGroupBox}"
                    		Margin="16"
                    		materialDesign:ColorZoneAssist.Mode="Accent" Width="215" HorizontalAlignment="Left" Height="125" VerticalAlignment="Top">
                            <GroupBox.Header>
                                <TextBlock HorizontalAlignment="Center" FontSize="18"><Run Text="Themes"/></TextBlock>
                            </GroupBox.Header>
                            <Grid>
                                <StackPanel>
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="16">Mode</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,20,20,0" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="WeatherSunny" Margin="0,0,10,0" Width="25" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <ToggleButton Margin="0,0,0,0" Command="{Binding ToggleBaseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=IsChecked}" Click="ThemeChecked"/>
                                    <materialDesign:PackIcon Kind="WeatherNight" Margin="10,0,0,2" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="480">
                    <Grid>
                        <GroupBox
                    		Style="{DynamicResource MaterialDesignGroupBox}"
                    		Margin="16"
                    		materialDesign:ColorZoneAssist.Mode="Accent" Width="445" Height="125" HorizontalAlignment="Left">
                            <GroupBox.Header>
                                <TextBlock HorizontalAlignment="Left" FontSize="18"><Run Text="Mining"/></TextBlock>
                            </GroupBox.Header>
                            <Grid>
                                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5,0,0" FontSize="16">Electricity Costs</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5,20,20,0" HorizontalAlignment="Left">
                                    <TextBox
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5,5,0,0">
                                        <materialDesign:HintAssist.Hint>
                                            <StackPanel
                                                Orientation="Horizontal"
                                                Margin="-2 0 0 0">
                                                <materialDesign:PackIcon
                                                    Kind="PowerPlug" />
                                                <TextBlock>
                                                    Rate
                                                </TextBlock>
                                            </StackPanel>
                                        </materialDesign:HintAssist.Hint>
                                    </TextBox>
                                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,2">AUD/kWh</TextBlock>
                                </StackPanel>
                                
                                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,0,0,0">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5,0,0" FontSize="16">Wallet Address</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5,20,20,0" HorizontalAlignment="Left">
                                    <TextBox
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5,5,0,0">
                                        <materialDesign:HintAssist.Hint>
                                            <StackPanel
                                                Orientation="Horizontal"
                                                Margin="-2 0 0 0">
                                                <materialDesign:PackIcon
                                                    Kind="PowerPlug" />
                                                <TextBlock>
                                                    Rate
                                                </TextBlock>
                                            </StackPanel>
                                        </materialDesign:HintAssist.Hint>
                                    </TextBox>
                                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,2">AUD/kWh</TextBlock>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </StackPanel>
            </Grid>

        </materialDesign:Card>
        <materialDesign:Flipper Width="389" Height="410" Margin="16,0,0,-6" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <materialDesign:Flipper.FrontContent>
                <Grid>
                    <materialDesign:Card Width="340" Height="325" Margin="10" Padding="15">
                        <Grid>
                            <StackPanel>
                                <Button
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                    Margin="0 4 0 0">
                                    EDIT
                                </Button>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </materialDesign:Flipper.FrontContent>
            <materialDesign:Flipper.BackContent>
                <materialDesign:Card Width="340" Height="325" Margin="10" Padding="15">
                    <Grid>
                        <StackPanel>
                            <Button
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                    Margin="0 4 0 0">
                                TEST
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </materialDesign:Flipper.BackContent>
        </materialDesign:Flipper>
    </Grid>
</UserControl>
