<Window
        x:Name="CryptoWindow"
        x:FieldModifier="public"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:CryptoPocket"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="CryptoPocket.MainWindow"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="500" 
        d:DataContext="{d:DesignInstance {x:Type local:MainWindow}}"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="Crypto Pocket" Height="650" Width="950"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}" WindowStyle="None" ResizeMode="NoResize" Loaded="CryptoPocket_Loaded" BorderBrush="#FFAB00" BorderThickness="2" Deactivated="Window_Deactivated" Topmost="False">

    <Window.Resources>
        <SolidColorBrush x:Key="StandardBorderBrush" Color="#888" />
        <SolidColorBrush x:Key="StandardBackgroundBrush" Color="Black" />
        <SolidColorBrush x:Key="HoverBorderBrush" Color="#DDD" />
        <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="Gray" />
        <SolidColorBrush x:Key="SelectedForegroundBrush" Color="White" />
        <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#888" />
        <SolidColorBrush x:Key="NormalBrush" Color="#888" />
        <SolidColorBrush x:Key="NormalBorderBrush" Color="#888" />
        <SolidColorBrush x:Key="HorizontalNormalBrush" Color="Black" />
        <SolidColorBrush x:Key="HorizontalNormalBorderBrush" Color="#888" />
        <LinearGradientBrush x:Key="ListBoxBackgroundBrush"
            StartPoint="0,0" EndPoint="1,0.001">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="White" Offset="0.0" />
                    <GradientStop Color="White" Offset="0.6" />
                    <GradientStop Color="#DDDDDD" Offset="1.2"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="StandardBrush"
            StartPoint="0,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="#FFF" Offset="0.0"/>
                    <GradientStop Color="#CCC" Offset="1.0"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="GlyphBrush" Color="#444" />
        <LinearGradientBrush x:Key="PressedBrush"
            StartPoint="0,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="#BBB" Offset="0.0"/>
                    <GradientStop Color="#EEE" Offset="0.1"/>
                    <GradientStop Color="#EEE" Offset="0.9"/>
                    <GradientStop Color="#FFF" Offset="1.0"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>

        <Style x:Key="ScrollBarLineButton" TargetType="{x:Type RepeatButton}">
            <Setter Property="Visibility" Value="Hidden"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Border
                            Name="Border"
                            Margin="1"
                            CornerRadius="2"
                            Background="{StaticResource NormalBrush}"
                            BorderBrush="{StaticResource NormalBorderBrush}"
                            BorderThickness="1">
                            <Path
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="{StaticResource GlyphBrush}"
                                Data="{Binding Path=Content,
                                RelativeSource={RelativeSource TemplatedParent}}" />        
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter TargetName="Border" Property="Background"
                                    Value="{StaticResource PressedBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground"
                                    Value="{StaticResource DisabledForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ScrollBarPageButton" TargetType="{x:Type RepeatButton}">
            <Setter Property="Visibility" Value="Hidden"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Border Background="Black" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border
                            CornerRadius="2"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0" 
                            Width="8"
                            Margin="8,0,-2,0"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="0"/>
                    <RowDefinition Height="0.00001*"/>
                    <RowDefinition MaxHeight="0"/>
                </Grid.RowDefinitions>
                <Border
                    Grid.RowSpan="3"
                    CornerRadius="2"
                    Background="Transparent" />
                <RepeatButton
                    Grid.Row="0"
                    Style="{StaticResource ScrollBarLineButton}"
                    Height="18"
                    Command="ScrollBar.LineUpCommand"
                    Content="M 0 4 L 8 4 L 4 0 Z" />
                <Track
                    Name="PART_Track"
                    Grid.Row="1"
                    IsDirectionReversed="true">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton
                            Style="{StaticResource ScrollBarPageButton}"
                            Command="ScrollBar.PageUpCommand" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb
                            Style="{StaticResource ScrollBarThumb}"
                            Margin="1,0,1,0"
                            Background="{StaticResource HorizontalNormalBrush}"
                            BorderBrush="{StaticResource HorizontalNormalBorderBrush}" />
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton
                            Style="{StaticResource ScrollBarPageButton}"
                            Command="ScrollBar.PageDownCommand" />
                    </Track.IncreaseRepeatButton>
                </Track>
                <RepeatButton
                    Grid.Row="3"
                    Style="{StaticResource ScrollBarLineButton}"
                    Height="18"
                    Command="ScrollBar.LineDownCommand"
                    Content="M 0 0 L 4 4 L 8 0 Z"/>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="HorizontalScrollBar"
            TargetType="{x:Type ScrollBar}">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="18"/>
                    <ColumnDefinition Width="0.00001*"/>
                    <ColumnDefinition MaxWidth="18"/>
                </Grid.ColumnDefinitions>
                <Border
                    Grid.ColumnSpan="3"
                    CornerRadius="2"
                    Background="#F0F0F0" />
                <RepeatButton
                    Grid.Column="0"
                    Style="{StaticResource ScrollBarLineButton}"
                    Width="18"
                    Command="ScrollBar.LineLeftCommand"
                    Content="M 4 0 L 4 8 L 0 4 Z" />
                <Track
                    Name="PART_Track"
                    Grid.Column="1"
                    IsDirectionReversed="False">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton
                            Style="{StaticResource ScrollBarPageButton}"
                            Command="ScrollBar.PageLeftCommand" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb
                            Style="{StaticResource ScrollBarThumb}"
                            Margin="0,1,0,1"
                            Background="{StaticResource NormalBrush}"
                            BorderBrush="{StaticResource NormalBorderBrush}" />
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton
                            Style="{StaticResource ScrollBarPageButton}"
                            Command="ScrollBar.PageRightCommand" />
                    </Track.IncreaseRepeatButton>
                </Track>
                <RepeatButton
                    Grid.Column="3"
                    Style="{StaticResource ScrollBarLineButton}"
                    Width="18"
                    Command="ScrollBar.LineRightCommand"
                    Content="M 0 0 L 4 4 L 0 8 Z"/>   
            </Grid>
        </ControlTemplate>
        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="Height" Value="18" />
                    <Setter Property="Template"
                        Value="{StaticResource HorizontalScrollBar}" />
                </Trigger>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="18"/>
                    <Setter Property="Height" Value="Auto" />
                    <Setter Property="Template"
                        Value="{StaticResource VerticalScrollBar}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FavsScrollViewer" TargetType="{x:Type ScrollViewer}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Column="1"/>

                            <ScrollBar 
                                Name="PART_VerticalScrollBar"
                                Value="{TemplateBinding VerticalOffset}"
                                Maximum="{TemplateBinding ScrollableHeight}"
                                ViewportSize="{TemplateBinding ViewportHeight}"
                                Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>

                            <ScrollBar Name="PART_HorizontalScrollBar"
                                       Orientation="Horizontal"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <!-- Main Grid -->

    <Grid Height="650" Width="950">

        <!-- Header -->

        <Grid Height="50" MouseDown="Window_MouseDown" VerticalAlignment="Top">
            <materialDesign:ColorZone Mode="Accent" Height="50">

                <!-- Title & Toolbar -->

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200*"/>
                        <ColumnDefinition Width="545*"/>
                        <ColumnDefinition Width="100*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" >
                        <TextBlock Text="Crypto Pocket" VerticalAlignment="Center" Margin="16 0 0 0" FontSize="28"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <Grid>
                            <Button  
								Style="{StaticResource MaterialDesignRaisedButton}" Background="{x:Null}" BorderBrush="{x:Null}"
								Click="Settings_Click" Height="50"
								Grid.Column="1" Width="Auto" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,25,0">
                                <Grid>
                                    <TextBlock x:Name="HeaderUser" Text="Guest" Grid.Column="1"
										HorizontalAlignment="Right" VerticalAlignment="Center" 
										FontSize="18" Margin="0,0,35,0"/>
                                    <materialDesign:PackIcon
										Kind="Account" Width="25" Height="25" 
										HorizontalAlignment="Right" VerticalAlignment="Center" Margin="50,0,0,0"/>
                                </Grid>

                            </Button>
                        </Grid>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <Grid>
                            <Button
								Style="{StaticResource MaterialDesignRaisedButton}"
								Height="50" Width="50" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,0,50,0" Click="btnMinimise_Click">
                                <materialDesign:PackIcon Kind="Minus" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                            <Button
								Style="{StaticResource MaterialDesignRaisedButton}"
								Height="50" Width="50" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}" Click="btnExit_Click">
                                <materialDesign:PackIcon Kind="WindowClose" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>

            </materialDesign:ColorZone>
        </Grid>

        <!-- Main Container -->
        <materialDesign:DialogHost x:Name="AddTrading">
            <Grid>
                <local:AccountSettings x:Name="AccountSettings"  Panel.ZIndex="1" Margin="0,90,0,0" Visibility="Hidden"/>

                <Grid Height="600" VerticalAlignment="Bottom">
                    <dragablz:TabablzControl 
                        x:FieldModifier="public" x:Name="HeaderTabs" 
                        BorderThickness="0" FixedHeaderCount="4" Grid.ColumnSpan="2" 
                        ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                        materialDesign:ShadowAssist.ShadowDepth="Depth3" 
                        PreviewMouseLeftButtonDown="Header_Click" 
                        BorderBrush="{DynamicResource MaterialDesignPaper}">
                        <dragablz:TabablzControl.InterTabController>
                            <dragablz:InterTabController />
                        </dragablz:TabablzControl.InterTabController>

                        <!-- Trading Dashboard -->

                        <TabItem x:Name="TabTrading"  ScrollViewer.VerticalScrollBarVisibility="Disabled" >
                            <TabItem.Header>
                                <TextBlock Foreground="{DynamicResource txtColor}" Text="Trading Dashboard" FontSize="16" Width="200" TextAlignment="Center"/>
                            </TabItem.Header>
                            <Grid MinWidth="950" MinHeight="600" Width="950" Height="600">


                                <!--#region Custom Coin Summary-->

                                <materialDesign:Card Grid.Column="0" VerticalAlignment="Top" Height="360" Width="540" HorizontalAlignment="Left" Margin="10,10,0,0" MouseEnter="CoinBox_Hover" MouseLeave="CoinBox_Leave">
                                    <materialDesign:DialogHost Foreground="{DynamicResource background}" CloseOnClickAway="True">
                                        <materialDesign:DialogHost.DialogContent>
                                            <StackPanel Margin="16" Width="250">

                                                <!-- Add Custom Coin -->

                                                <TextBlock Text="Trading Portfolio" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="16,16,16,6"/>
                                                <TextBlock Text="Custom Coin" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="16,0,16,6"/>
                                                <StackPanel Orientation="Vertical" Width="250">
                                                    <ComboBox
														Margin="6" Width="Auto"
														x:Name= "CoinComboBox"
														materialDesign:HintAssist.Hint="Coin Symbol"
														MinWidth="72" Style="{StaticResource MaterialDesignFloatingHintComboBox}"
														VerticalAlignment="Bottom" IsEditable="True" Text="{Binding SelectedTextTwo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                        <ComboBox.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <VirtualizingStackPanel />
                                                            </ItemsPanelTemplate>
                                                        </ComboBox.ItemsPanel>
                                                    </ComboBox>
                                                </StackPanel>
                                                <Grid>
                                                    <Button
														Style="{StaticResource MaterialDesignFlatButton}"
														IsDefault="True"
														Command="materialDesign:DialogHost.CloseDialogCommand" Click="btnCustomCoin_Click" HorizontalAlignment="Left" Margin="6,6,0,0" Content="ACCEPT">
                                                        <Button.CommandParameter>
                                                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
                                                        </Button.CommandParameter>
                                                    </Button>
                                                    <Button
														Style="{StaticResource MaterialDesignFlatButton}"
														IsCancel="True"
														Command="materialDesign:DialogHost.CloseDialogCommand" HorizontalAlignment="Right" Margin="0,6,6,0" Content="CANCEL">
                                                        <Button.CommandParameter>
                                                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">False</system:Boolean>
                                                        </Button.CommandParameter>
                                                    </Button>
                                                </Grid>

                                            </StackPanel>
                                        </materialDesign:DialogHost.DialogContent>


                                        <Grid>
                                            <ScrollViewer Margin="20" Padding="10" PreviewMouseWheel="CoinBox_PreviewMouseWheel">
                                                <ListBox x:Name="CoinBox" IsSynchronizedWithCurrentItem="True">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <materialDesign:ColorZone materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                                                <Grid Width="Auto" Height="90">
                                                                    <Grid HorizontalAlignment="Left" Width="128">
                                                                        <Button 
																			Background="Orange" BorderBrush="Orange"
																			Style="{StaticResource MaterialDesignFloatingActionButton}"
																			ToolTip="MaterialDesignFloatingActionButton" HorizontalAlignment="Left" Margin="15,0,20,0" Width="55" Height="55" FontSize="18"
																			Content="ETH"/>
                                                                        <materialDesign:PackIcon Kind="TrendingDown" Height="40" Width="40" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,25,10,25"/>
                                                                    </Grid>
                                                                    <Grid Margin="54,0,392,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="50*"/>
                                                                            <RowDefinition Height="50*"/>
                                                                        </Grid.RowDefinitions>
                                                                        <TextBlock Grid.Row="0" Text="ETH/USD: $583.03" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,7,24,5"/>
                                                                        <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}" Margin="0,0,0,50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        <TextBlock Grid.Row="1" Text="ETH/BTC: 0.07791070" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="-6,17,6,6"/>
                                                                    </Grid>
                                                                    <Grid HorizontalAlignment="Right">
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="40*"/>
                                                                            <RowDefinition Height="60*"/>
                                                                        </Grid.RowDefinitions>
                                                                        <TextBlock x:Name="ToggleCoinText" Text="Portfolio Value" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,12,0,8"/>
                                                                        <ToggleButton
																			Style="{StaticResource MaterialDesignActionToggleButton}"
																			ToolTip="MaterialDesignActionLightToggleButton" HorizontalAlignment="Right" Margin="0,5,5,0" Width="28" Height="28" Click="CustomCoinToggle_Click">
                                                                            <materialDesign:ToggleButtonAssist.OnContent>
                                                                                <materialDesign:PackIcon
																					Kind="ChartLineVariant" />
                                                                            </materialDesign:ToggleButtonAssist.OnContent>
                                                                            <materialDesign:PackIcon
																				Kind="AccountCardDetails" Width="15" Height="15" />
                                                                        </ToggleButton>
                                                                        <!-- Portfolio Value-->
                                                                        <TextBlock x:Name="PortfolioCoin" Opacity="100" Text="ETH: 0.52" Grid.Row="2" Margin="0,-10,0,20" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                                                                        <TextBlock x:Name="PortfolioCoinV" Opacity="100" Text="$226.62 USD" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" FontSize="16"/>
                                                                        <!-- Change in Value -->
                                                                        <TextBlock x:Name="txt24Hours" Opacity="0" Text="24 Hours" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="25,4,73,34" RenderTransformOrigin="0.846,0.75"/>
                                                                        <TextBlock x:Name="txt7Days" Opacity="0" Text="7 Days" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="39,26,73,12"/>
                                                                        <materialDesign:PackIcon x:Name="Icon24Hours" Opacity="0" Grid.Row="1" Kind="TrendingDown" Height="16" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="125,25,10,13" RenderTransformOrigin="0.313,1.097" />
                                                                        <TextBlock x:Name="txt24HoursV" Opacity="0" Text="$20.62" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="82,4,30,34"/>
                                                                        <TextBlock x:Name="txt7DaysV" Opacity="0" Text="$2.12" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="89,26,30,12" RenderTransformOrigin="-0.551,0.959"/>
                                                                        <materialDesign:PackIcon x:Name="Icon7Days" Opacity="0" Grid.Row="1" Kind="TrendingUp" Height="16" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="125,4,10,34" RenderTransformOrigin="0.313,1.097" />
                                                                    </Grid>
                                                                </Grid>
                                                            </materialDesign:ColorZone>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </ScrollViewer>
                                            <Button
												Opacity="0" x:Name="CustomCoinButton"
												SelectiveScrollingGrid.SelectiveScrollingOrientation="None"
												Background="#379824" BorderBrush="#379824"
												Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
												Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
												ToolTip="MaterialDesignFloatingActionDarkButton" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,55,30"
                                                materialDesign:ShadowAssist.ShadowDepth="Depth3">
                                                <materialDesign:PackIcon
													Kind="Plus"
													Height="24" Width="24" Foreground="White" />

                                            </Button>
                                        </Grid>

                                    </materialDesign:DialogHost>
                                </materialDesign:Card>

                                <!--#endregion-->

                                <!--#region Trading Bottom Cards-->

                                <!-- Card 01 -->

                                <materialDesign:Card Grid.Column="0" VerticalAlignment="Bottom" Height="180" Width="920" HorizontalAlignment="Left" Margin="10,0,0,33" Padding="20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="244"/>
                                            <ColumnDefinition Width="210"/>
                                            <ColumnDefinition Width="250"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:Card 
											Background="Orange" Grid.Column="0"
											Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
											Padding="0" Width="240" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <StackPanel>
                                                    <materialDesign:ColorZone Mode="Accent" Margin="0,0,0,0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="CashMultiple" Margin="20,9,16,8" HorizontalAlignment="Center" VerticalAlignment="Top" Width="50" Height="35" />
                                                            <TextBlock Grid.Row="0" Margin="0,16,16,14" Style="{StaticResource MaterialDesignHeadlineTextBlock}" TextAlignment="Center"><Run Text="Investment"/></TextBlock>
                                                        </StackPanel>
                                                    </materialDesign:ColorZone>
                                                    <materialDesign:ColorZone VerticalAlignment="Top" Margin="0">
                                                        <StackPanel>
                                                            <TextBlock Grid.Row="2" Margin="16,8" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignBody2TextBlock}" FontSize="24" Text="$32,000 AUD"/>
                                                        </StackPanel>
                                                    </materialDesign:ColorZone>
                                                </StackPanel>
                                            </Grid>
                                        </materialDesign:Card>

                                        <!-- Card 02 -->

                                        <materialDesign:Card 
											Background="Orange" Grid.Column="1" Margin="10,0,0,0"
											Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
											Padding="0" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <StackPanel>
                                                    <materialDesign:ColorZone Mode="Accent" Margin="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="TrendingUp" Margin="20,9,16,8" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="35" />
                                                            <TextBlock Grid.Row="0" Margin="0,16,16,14" Style="{StaticResource MaterialDesignHeadlineTextBlock}" TextAlignment="Center" Foreground="#DD000000"><Run Text="Profit"/></TextBlock>
                                                        </StackPanel>
                                                    </materialDesign:ColorZone>
                                                    <materialDesign:ColorZone VerticalAlignment="Top" Margin="0">
                                                        <StackPanel>
                                                            <TextBlock Grid.Row="2" Margin="16,8" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignBody2TextBlock}" FontSize="24" Text="$12,000 AUD"/>
                                                        </StackPanel>
                                                    </materialDesign:ColorZone>
                                                </StackPanel>
                                            </Grid>
                                        </materialDesign:Card>

                                        <!-- Card 03 -->

                                        <materialDesign:Card 
											Background="Orange" Grid.Column="2" Margin="10,0,0,0"
											Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
											Padding="0" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <StackPanel>
